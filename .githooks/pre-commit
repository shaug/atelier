#!/usr/bin/env bash
set -euo pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
repo_root="$(cd "${script_dir}/.." && pwd)"
if ! git -C "${repo_root}" rev-parse --is-inside-work-tree >/dev/null 2>&1; then
  echo "pre-commit: ${repo_root} is not a git work tree" >&2
  exit 1
fi

mapfile -t staged_python_files < <(
  git -C "${repo_root}" diff --cached --name-only --diff-filter=ACMR \
    | awk '/\.(py|pyi)$/'
)

if [[ ${#staged_python_files[@]} -eq 0 ]]; then
  exit 0
fi

if [[ ! -x "${repo_root}/scripts/lint-gate.sh" ]]; then
  echo "pre-commit: missing executable lint gate script at scripts/lint-gate.sh." >&2
  exit 1
fi

if ! (
  cd "${repo_root}" && bash scripts/lint-gate.sh --staged-python "${staged_python_files[@]}"
); then
  cat >&2 <<'EOF'
pre-commit: lint gate failed.
pre-commit: run 'just lint' (or 'just format' first), then stage updated files before committing.
EOF
  exit 1
fi
